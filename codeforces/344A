#include<bits/stdc++.h>
using namespace std ;
int main()
{
    int a ;
    int count = 0;
    cin>>a;
    vector<int>arr;
    for(int i =0;i<a;i++)
    {
        int x ;
        cin>>x;
        arr.push_back(x);
    }
    for(int i =0;i<a;i++)
    {
        if(arr[i]!=arr[i+1])
            count++;
    }
    cout<<count<<endl;
    arr.clear();
    count =0;
    return 0;
}
